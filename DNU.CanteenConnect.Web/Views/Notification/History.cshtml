@model IEnumerable<DNU.CanteenConnect.Web.Models.Notification>

@{
    ViewData["Title"] = "Lịch Sử Thông Báo";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-bell me-2"></i> Lịch Sử Thông Báo
        <span class="badge bg-danger float-end" id="unreadBadge">@ViewBag.UnreadCount</span>
    </h2>

    @if (ViewBag.UnreadCount > 0)
    {
        <button class="btn btn-sm btn-outline-primary mb-3" id="markAllBtn">
            <i class="fas fa-check-double me-2"></i> Đánh dấu tất cả đã đọc
        </button>
    }

    <div class="row">
        <div class="col-lg-8">
            @if (Model.Any())
            {
                <div class="list-group">
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item @(notification.IsRead ? "" : "list-group-item-info")" 
                             id="notification-@notification.NotificationId">
                            <div class="d-flex w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-1">
                                        @if (notification.NotificationType == "OrderStatusUpdate")
                                        {
                                            <i class="fas fa-sync-alt text-info me-2"></i>
                                        }
                                        else if (notification.NotificationType == "PaymentConfirmed")
                                        {
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-info-circle text-secondary me-2"></i>
                                        }
                                        @notification.Message
                                    </h6>
                                    <small class="text-muted">
                                        @notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                    @if (notification.OrderId.HasValue)
                                    {
                                        <br />
                                        <small>
                                            <a href="@Url.Action("Details", "OrderHistory", new { id = notification.OrderId })" 
                                               class="text-decoration-none">
                                                Xem chi tiết đơn hàng →
                                            </a>
                                        </small>
                                    }
                                </div>
                                <div class="text-end">
                                    @if (!notification.IsRead)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary mark-read-btn" 
                                                data-id="@notification.NotificationId">
                                            <i class="fas fa-check me-1"></i> Đánh dấu đã đọc
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã đọc</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("History", new { page = ViewBag.CurrentPage - 1 })">
                                        Trang trước
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("History", new { page = i })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("History", new { page = ViewBag.CurrentPage + 1 })">
                                        Trang sau
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                    <p class="mb-0">Bạn chưa có thông báo nào.</p>
                </div>
            }
        </div>

        <!-- Sidebar Info -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i> Thống Kê
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tổng thông báo:</span>
                            <strong>@ViewBag.TotalNotifications</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Chưa đọc:</span>
                            <span class="badge bg-danger">@ViewBag.UnreadCount</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Đã đọc:</span>
                            <strong>@(ViewBag.TotalNotifications - ViewBag.UnreadCount)</strong>
                        </div>
                    </div>
                    <hr />
                    <p class="small text-muted mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Thông báo sẽ tự động lưu trong 90 ngày.
                    </p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i> Mẹo
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Thông báo thời gian thực sẽ hiển thị ngay khi có cập nhật</li>
                        <li>Kiểm tra trang này để xem lịch sử đầy đủ</li>
                        <li>Click vào "Xem chi tiết" để xem đơn hàng</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Mark single notification as read
            $(".mark-read-btn").click(function () {
                var btn = $(this);
                var notificationId = btn.data("id");

                $.post("@Url.Action("MarkAsRead")", 
                    { __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val(), id: notificationId },
                    function (data) {
                        if (data.success) {
                            $(`#notification-${notificationId}`).removeClass("list-group-item-info");
                            btn.replaceWith('<span class="badge bg-secondary">Đã đọc</span>');
                            updateUnreadCount();
                        }
                    }
                );
            });

            // Mark all as read
            $("#markAllBtn").click(function () {
                $.post("@Url.Action("MarkAllAsRead")", 
                    { __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val() },
                    function (data) {
                        if (data.success) {
                            location.reload();
                        }
                    }
                );
            });

            // Update unread count in real-time (every 30 seconds)
            function updateUnreadCount() {
                $.get("@Url.Action("GetUnreadCount")", function (data) {
                    $("#unreadBadge").text(data.count);
                    if (data.count === 0) {
                        $("#markAllBtn").hide();
                    }
                });
            }

            // Refresh unread count periodically
            setInterval(updateUnreadCount, 30000);
        });
    </script>
}

<style>
    .list-group-item {
        transition: all 0.3s ease;
    }

    .list-group-item-info {
        background-color: #e7f3ff;
        border-left: 4px solid #0d6efd;
    }

    .list-group-item:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
</style>
