@model OrderManagementViewModel

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    
    // Logic tính toán phân trang
    var prevDisabled = !Model.Orders.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Orders.HasNextPage ? "disabled" : "";
    var prevPageNumber = Model.Orders.PageIndex - 1;
    var nextPageNumber = Model.Orders.PageIndex + 1;
}

<style>
    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
    }

    .admin-header h1 {
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .admin-header i {
        font-size: 3rem;
    }

    .filter-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
        margin-bottom: 30px;
    }

    .filter-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-row {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        align-items: flex-end;
    }

    .filter-group {
        flex: 1;
        min-width: 200px;
    }

    .filter-group label {
        font-weight: 700;
        color: #2d3748;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .filter-group input,
    .filter-group select {
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        padding: 12px 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
    }

    .filter-group input:focus,
    .filter-group select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
    }

    .btn-search {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 12px 28px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
    }

    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.35);
    }

    .btn-reset {
        background: #e2e8f0;
        color: #2d3748 !important;
        border: none;
        font-weight: 700;
        padding: 12px 28px;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .btn-reset:hover {
        background: #cbd5e0;
        transform: translateY(-2px);
    }

    .table-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .table-responsive {
        border-radius: 16px;
        overflow: hidden;
    }

    .table {
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table thead {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .table thead th {
        border: none;
        padding: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.85rem;
        vertical-align: middle;
    }

    .table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #e2e8f0;
    }

    .table tbody tr:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
    }

    .table tbody td {
        padding: 16px 18px;
        vertical-align: middle;
        color: #2d3748;
    }

    .order-id {
        font-weight: 700;
        color: #667eea;
        font-family: 'Courier New', monospace;
    }

    .badge-status {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }

    .badge-success {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .badge-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .badge-warning {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .badge-secondary {
        background: linear-gradient(135deg, #cbd5e0 0%, #a0aec0 100%);
        color: white;
    }

    .badge-danger {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white;
    }

    .badge-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-action {
        width: 40px;
        height: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        border: none;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-info-action {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .btn-info-action:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(79, 172, 254, 0.3);
    }

    .btn-success-action {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .btn-success-action:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(67, 233, 123, 0.3);
    }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
    }

    .empty-state i {
        font-size: 4rem;
        color: #cbd5e0;
        margin-bottom: 20px;
    }

    .empty-state p {
        font-size: 1.1rem;
        color: #718096;
        margin: 0;
    }

    .pagination-section {
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e2e8f0;
    }

    .pagination {
        justify-content: center;
        gap: 8px;
    }

    .page-link {
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        color: #667eea;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 8px 12px;
    }

    .page-link:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .page-item.disabled .page-link {
        color: #cbd5e0;
        cursor: not-allowed;
    }

    .page-info {
        color: #718096;
        font-size: 0.95rem;
        margin-top: 15px;
    }

    .alert {
        border: none;
        border-left: 4px solid;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        border-left-color: #43e97b;
        background: linear-gradient(90deg, rgba(67, 233, 123, 0.1) 0%, rgba(56, 249, 215, 0.1) 100%);
        color: #22543d;
    }

    .alert-danger {
        border-left-color: #ff6e7f;
        background: linear-gradient(90deg, rgba(255, 110, 127, 0.1) 0%, rgba(252, 103, 103, 0.1) 100%);
        color: #742a2a;
    }
</style>

<div class="container-fluid py-5">
    <!-- Admin Header -->
    <div class="admin-header mb-5">
        <h1>
            <i class="fas fa-clipboard-list"></i>
            Quản Lý Đơn Hàng
        </h1>
    </div>

    <!-- Filter Section -->
    <div class="filter-card">
        <div class="filter-title">
            <i class="fas fa-filter"></i>
            Bộ Lọc Tìm Kiếm
        </div>

        <form asp-controller="OrderManagement" asp-action="Index" method="get">
            <div class="filter-row">
                <div class="filter-group">
                    <label for="searchString">Tìm Kiếm (Tên/Mã Đơn)</label>
                    <input type="text" name="SearchString" id="searchString" class="form-control" 
                           value="@Model.CurrentSearchString" placeholder="Nhập từ khóa..." />
                </div>

                <div class="filter-group">
                    <label for="statusFilter">Trạng Thái</label>
                    <select name="StatusFilter" id="statusFilter" class="form-select" asp-items="Model.StatusFilterOptions">
                        <option value="">-- Tất Cả --</option>
                    </select>
                </div>

                <div class="filter-group" style="flex: 0 1 auto; min-width: auto;">
                    <button type="submit" class="btn btn-search">
                        <i class="fas fa-search me-2"></i> Tìm Kiếm
                    </button>
                </div>

                <div class="filter-group" style="flex: 0 1 auto; min-width: auto;">
                    <a asp-controller="OrderManagement" asp-action="Index" class="btn btn-reset">
                        <i class="fas fa-redo me-2"></i> Đặt Lại
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Table Section -->
    <div class="table-card">
        @if (Model.Orders != null && Model.Orders.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>Mã Đơn</th>
                            <th><i class="fas fa-user me-2"></i>Khách Hàng</th>
                            <th><i class="fas fa-store me-2"></i>Nhà Ăn</th>
                            <th><i class="fas fa-calendar me-2"></i>Ngày Đặt</th>
                            <th><i class="fas fa-money-bill me-2"></i>Tổng Tiền</th>
                            <th><i class="fas fa-flag me-2"></i>Trạng Thái</th>
                            <th><i class="fas fa-credit-card me-2"></i>Thanh Toán</th>
                            <th class="text-center"><i class="fas fa-cog me-2"></i>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <td><span class="order-id">#@item.OrderId</span></td>
                                <td><strong>@item.User!.UserName</strong></td>
                                <td>@item.Canteen!.Name</td>
                                <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><strong style="color: #667eea;">@item.TotalAmount.ToString("N0") VNĐ</strong></td>
                                <td>
                                    <span class="badge-status @(item.Status == "Completed" || item.Status == "Paid" ? "badge-success" : item.Status == "AwaitingPaymentConfirmation" || item.Status == "PaymentSubmitted" ? "badge-info" : item.Status == "Pending" ? "badge-warning" : item.Status == "Preparing" || item.Status == "Ready" ? "badge-primary" : item.Status == "Cancelled" ? "badge-danger" : "badge-secondary")">
                                        @DNU.CanteenConnect.Web.Controllers.OrderManagementController.GetStatusDisplayName(item.Status)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge-status badge-secondary">
                                        @(item.PaymentMethod == "BankTransfer" ? "🏦 Chuyển Khoản" : "💵 COD")
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-controller="OrderManagement" asp-action="Details" asp-route-id="@item.OrderId" 
                                           class="btn-action btn-info-action" title="Chi tiết đơn hàng" data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (item.PaymentMethod == "BankTransfer" && item.Status == "PaymentSubmitted")
                                        {
                                            <form asp-action="ConfirmBankPayment" asp-route-orderId="@item.OrderId" method="post" class="d-inline-block" 
                                                  onsubmit="return confirm('✅ Xác nhận đã nhận tiền cho đơn hàng #@item.OrderId?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn-action btn-success-action" title="Xác nhận thanh toán" data-bs-toggle="tooltip">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination-section">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item @prevDisabled">
                            <a asp-action="Index" asp-route-pageNumber="@prevPageNumber" 
                               asp-route-searchString="@Model.CurrentSearchString" 
                               asp-route-statusFilter="@Model.CurrentStatusFilter" 
                               class="page-link">
                                <i class="fas fa-chevron-left me-1"></i> Trước
                            </a>
                        </li>

                        @for (var i = 1; i <= Model.Orders.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Orders.PageIndex ? "active" : "")">
                                <a asp-action="Index" asp-route-pageNumber="@i" 
                                   asp-route-searchString="@Model.CurrentSearchString" 
                                   asp-route-statusFilter="@Model.CurrentStatusFilter" 
                                   class="page-link">@i</a>
                            </li>
                        }

                        <li class="page-item @nextDisabled">
                            <a asp-action="Index" asp-route-pageNumber="@nextPageNumber" 
                               asp-route-searchString="@Model.CurrentSearchString" 
                               asp-route-statusFilter="@Model.CurrentStatusFilter" 
                               class="page-link">
                                Sau <i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="page-info">
                    📄 Trang <strong>@Model.Orders.PageIndex</strong> / <strong>@Model.Orders.TotalPages</strong>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Chưa có đơn hàng nào để quản lý theo bộ lọc này</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}