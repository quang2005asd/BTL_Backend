@using DNU.CanteenConnect.Web.Helpers
@model PaginatedList<UserViewModel>

@{
    ViewData["Title"] = "Quản lý Người dùng";
    
    var roleDisplayNames = new Dictionary<string, string>
    {
        { "Admin", "Quản trị viên" },
        { "CanteenStaff", "Nhân viên Nhà ăn" },
        { "Customer", "Khách hàng" }
    };

    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<style>
    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
    }

    .admin-header h1 {
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .admin-header i {
        font-size: 3rem;
    }

    .table-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .table-responsive {
        border-radius: 16px;
        overflow: hidden;
    }

    .table {
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table thead {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .table thead th {
        border: none;
        padding: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.85rem;
        vertical-align: middle;
    }

    .table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #e2e8f0;
    }

    .table tbody tr:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
    }

    .table tbody td {
        padding: 16px 18px;
        vertical-align: middle;
        color: #2d3748;
    }

    .username {
        font-weight: 700;
        color: #667eea;
        font-size: 1rem;
    }

    .email {
        color: #718096;
        font-size: 0.95rem;
    }

    .badge-role {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        margin-right: 6px;
        margin-bottom: 4px;
    }

    .badge-admin {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white;
    }

    .badge-staff {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .badge-customer {
        background: linear-gradient(135deg, #cbd5e0 0%, #a0aec0 100%);
        color: white;
    }

    .badge-status {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .badge-active {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .badge-locked {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
        color: white;
    }

    .btn-manage {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 10px 20px;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
        font-size: 0.9rem;
    }

    .btn-manage:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(102, 126, 234, 0.35);
    }

    .pagination-section {
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e2e8f0;
    }

    .pagination {
        justify-content: center;
        gap: 8px;
    }

    .page-link {
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        color: #667eea;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 8px 12px;
    }

    .page-link:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .page-item.disabled .page-link {
        color: #cbd5e0;
        cursor: not-allowed;
    }

    .page-info {
        color: #718096;
        font-size: 0.95rem;
        margin-top: 15px;
    }

    .roles-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }
</style>

<div class="container-fluid py-5">
    <!-- Admin Header -->
    <div class="admin-header mb-5">
        <h1>
            <i class="fas fa-users"></i>
            Quản Lý Người Dùng
        </h1>
    </div>

    <!-- Table Section -->
    <div class="table-card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="fas fa-user me-2"></i>Tên Người Dùng</th>
                        <th><i class="fas fa-envelope me-2"></i>Email</th>
                        <th><i class="fas fa-shield-alt me-2"></i>Vai Trò</th>
                        <th><i class="fas fa-circle me-2"></i>Trạng Thái</th>
                        <th class="text-center"><i class="fas fa-cog me-2"></i>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var userVm in Model)
                    {
                        <tr>
                            <td><span class="username">@userVm.User.UserName</span></td>
                            <td><span class="email">@userVm.User.Email</span></td>
                            <td>
                                <div class="roles-wrapper">
                                    @if (userVm.Roles.Any())
                                    {
                                        @foreach (var role in userVm.Roles)
                                        {
                                            <span class="badge-role @(role == "Admin" ? "badge-admin" : role == "CanteenStaff" ? "badge-staff" : "badge-customer")">
                                                @roleDisplayNames.GetValueOrDefault(role, role)
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span style="color: #cbd5e0; font-style: italic;">Không có</span>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (userVm.User.LockoutEnd != null && userVm.User.LockoutEnd > DateTime.Now)
                                {
                                    <span class="badge-status badge-locked">
                                        <i class="fas fa-lock me-1"></i> Bị Khóa
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-status badge-active">
                                        <i class="fas fa-check-circle me-1"></i> Hoạt Động
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="ManageRoles" asp-route-id="@userVm.User.Id" 
                                   class="btn-manage" data-bs-toggle="tooltip" title="Quản lý vai trò của người dùng">
                                    <i class="fas fa-user-shield me-2"></i> Quản Lý Vai Trò
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination-section">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item @prevDisabled">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="page-link">
                            <i class="fas fa-chevron-left me-1"></i> Trước
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a asp-action="Index" asp-route-pageNumber="@i" class="page-link">@i</a>
                        </li>
                    }
                    <li class="page-item @nextDisabled">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="page-link">
                            Sau <i class="fas fa-chevron-right ms-1"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="page-info">
                📄 Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}