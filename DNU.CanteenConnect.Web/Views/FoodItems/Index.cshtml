@model FoodItemManagementViewModel

@{
    ViewData["Title"] = "Quản lý Món ăn";
    var prevDisabled = !Model.FoodItems.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.FoodItems.HasNextPage ? "disabled" : "";
}

<style>
    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
    }

    .admin-header h1 {
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .admin-header i {
        font-size: 3rem;
    }

    .btn-create {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 14px 32px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(67, 233, 123, 0.25);
        font-size: 1rem;
    }

    .btn-create:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(67, 233, 123, 0.35);
    }

    .filter-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
        margin-bottom: 30px;
    }

    .filter-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .filter-row {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        align-items: flex-end;
    }

    .filter-group {
        flex: 1;
        min-width: 200px;
    }

    .filter-group label {
        font-weight: 700;
        color: #2d3748;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .filter-group input,
    .filter-group select {
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        padding: 12px 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
    }

    .filter-group input:focus,
    .filter-group select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
    }

    .btn-filter {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 12px 28px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
    }

    .btn-filter:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.35);
    }

    .table-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .table-responsive {
        border-radius: 16px;
        overflow: hidden;
    }

    .table {
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table thead {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .table thead th {
        border: none;
        padding: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.85rem;
        vertical-align: middle;
    }

    .table tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #e2e8f0;
    }

    .table tbody tr:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        transform: scale(1.01);
    }

    .table tbody td {
        padding: 16px 18px;
        vertical-align: middle;
        color: #2d3748;
    }

    .food-name {
        font-weight: 700;
        color: #667eea;
        font-size: 1rem;
    }

    .food-price {
        font-weight: 700;
        color: #43e97b;
        font-size: 1.1rem;
    }

    .food-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .badge-stock {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
    }

    .badge-stock-low {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white;
    }

    .badge-stock-medium {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .badge-stock-high {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .badge-status {
        display: inline-block;
        padding: 8px 12px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .badge-available {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .badge-unavailable {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white;
    }

    .badge-special {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-action {
        width: 38px;
        height: 38px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        border: none;
        font-weight: 700;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-edit {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .btn-edit:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(250, 112, 154, 0.3);
    }

    .btn-info-action {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .btn-info-action:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(79, 172, 254, 0.3);
    }

    .btn-delete {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white;
    }

    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 16px rgba(255, 110, 127, 0.3);
    }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
    }

    .empty-state i {
        font-size: 4rem;
        color: #cbd5e0;
        margin-bottom: 20px;
    }

    .empty-state p {
        font-size: 1.1rem;
        color: #718096;
        margin: 0;
    }

    .pagination-section {
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e2e8f0;
    }

    .pagination {
        justify-content: center;
        gap: 8px;
    }

    .page-link {
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        color: #667eea;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 8px 12px;
    }

    .page-link:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .page-item.disabled .page-link {
        color: #cbd5e0;
        cursor: not-allowed;
    }

    .page-info {
        color: #718096;
        font-size: 0.95rem;
        margin-top: 15px;
    }
</style>

<div class="container-fluid py-5">
    <!-- Admin Header -->
    <div class="admin-header mb-5">
        <h1>
            <i class="fas fa-utensils"></i>
            Quản Lý Món Ăn
        </h1>
    </div>

    <!-- Create Button -->
    <div class="mb-30" style="margin-bottom: 30px;">
        <a asp-controller="FoodItems" asp-action="Create" class="btn-create">
            <i class="fas fa-plus-circle me-2"></i> Thêm Món Ăn Mới
        </a>
    </div>

    <!-- Filter Section -->
    <div class="filter-card">
        <div class="filter-title">
            <i class="fas fa-filter"></i>
            Bộ Lọc Tìm Kiếm
        </div>

        <form asp-controller="FoodItems" asp-action="Index" method="get">
            <div class="filter-row">
                <div class="filter-group">
                    <label for="searchString">Tên Món Ăn</label>
                    <input type="text" name="SearchString" id="searchString" class="form-control" 
                           value="@Model.SearchString" placeholder="Nhập từ khóa..." />
                </div>

                <div class="filter-group">
                    <label for="canteenId">Nhà Ăn</label>
                    <select name="CanteenId" id="canteenId" class="form-select" asp-items="Model.Canteens">
                        <option value="">-- Tất Cả --</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label for="categoryId">Danh Mục</label>
                    <select name="CategoryId" id="categoryId" class="form-select" asp-items="Model.Categories">
                        <option value="">-- Tất Cả --</option>
                    </select>
                </div>

                <div class="filter-group" style="flex: 0 1 auto; min-width: auto;">
                    <button type="submit" class="btn btn-filter">
                        <i class="fas fa-search me-2"></i> Tìm Kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Table Section -->
    <div class="table-card">
        @if (Model.FoodItems.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-utensils me-2"></i>Tên Món Ăn</th>
                            <th><i class="fas fa-tag me-2"></i>Giá</th>
                            <th><i class="fas fa-store me-2"></i>Nhà Ăn</th>
                            <th><i class="fas fa-folder me-2"></i>Danh Mục</th>
                            <th><i class="fas fa-boxes me-2"></i>Tồn Kho</th>
                            <th><i class="fas fa-image me-2"></i>Ảnh</th>
                            <th class="text-center"><i class="fas fa-check me-2"></i>Trạng Thái</th>
                            <th class="text-center"><i class="fas fa-star me-2"></i>Đặc Biệt</th>
                            <th class="text-center"><i class="fas fa-cog me-2"></i>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FoodItems)
                        {
                            <tr>
                                <td><span class="food-name">@item.Name</span></td>
                                <td><span class="food-price">@item.Price.ToString("N0") VNĐ</span></td>
                                <td>@item.Canteen!.Name</td>
                                <td>@item.FoodCategory!.Name</td>
                                <td>
                                    <span class="badge-stock @(item.StockQuantity <= 5 ? "badge-stock-low" : item.StockQuantity <= 10 ? "badge-stock-medium" : "badge-stock-high")">
                                        @item.StockQuantity
                                    </span>
                                </td>
                                <td>
                                    <img src="@(item.ImageUrl ?? "https://placehold.co/80x80/cccccc/ffffff?text=No+Img")" 
                                         alt="@item.Name" class="food-image" />
                                </td>
                                <td class="text-center">
                                    @if (item.IsAvailable) 
                                    { 
                                        <span class="badge-status badge-available">
                                            <i class="fas fa-check-circle me-1"></i> Có Sẵn
                                        </span>
                                    }
                                    else 
                                    { 
                                        <span class="badge-status badge-unavailable">
                                            <i class="fas fa-times-circle me-1"></i> Hết Hàng
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.IsSpecialOfTheDay) 
                                    { 
                                        <span class="badge-status badge-special">
                                            <i class="fas fa-star me-1"></i> Nổi Bật
                                        </span>
                                    }
                                    else 
                                    { 
                                        <span style="color: #cbd5e0;"><i class="fas fa-minus-circle"></i></span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.ItemId" 
                                           class="btn-action btn-edit" title="Sửa" data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ItemId" 
                                           class="btn-action btn-info-action" title="Chi tiết" data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ItemId" 
                                           class="btn-action btn-delete" title="Xóa" data-bs-toggle="tooltip"
                                           onclick="return confirm('Bạn chắc chắn muốn xóa món ăn này?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination-section">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item @prevDisabled">
                            <a asp-action="Index" asp-route-pageNumber="@(Model.FoodItems.PageIndex - 1)" 
                               asp-route-searchString="@Model.SearchString" asp-route-canteenId="@Model.CanteenId" 
                               asp-route-categoryId="@Model.CategoryId" class="page-link">
                                <i class="fas fa-chevron-left me-1"></i> Trước
                            </a>
                        </li>

                        @for (var i = 1; i <= Model.FoodItems.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.FoodItems.PageIndex ? "active" : "")">
                                <a asp-action="Index" asp-route-pageNumber="@i" 
                                   asp-route-searchString="@Model.SearchString" asp-route-canteenId="@Model.CanteenId" 
                                   asp-route-categoryId="@Model.CategoryId" class="page-link">@i</a>
                            </li>
                        }

                        <li class="page-item @nextDisabled">
                            <a asp-action="Index" asp-route-pageNumber="@(Model.FoodItems.PageIndex + 1)" 
                               asp-route-searchString="@Model.SearchString" asp-route-canteenId="@Model.CanteenId" 
                               asp-route-categoryId="@Model.CategoryId" class="page-link">
                                Sau <i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="page-info">
                    📄 Trang <strong>@Model.FoodItems.PageIndex</strong> / <strong>@Model.FoodItems.TotalPages</strong>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Chưa có món ăn nào được thêm hoặc không tìm thấy kết quả</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}