@model DNU.CanteenConnect.Web.Models.FoodItem


@{
    ViewData["Title"] = "Sửa Món ăn";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;"> @* Center content *@
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 600px;"> @* Create card frame *@
        <div class="card-body">
            <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1> @* Page title *@

            <h4>Thông tin Món ăn</h4>
            <hr />
            <div class="row">
                <div class="col-md-12"> @* Use full width of card *@
                    <form asp-action="Edit"> @* Sử dụng asp-action thay vì method="post" *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ItemId" /> @* Hidden field to store Item ID *@
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="control-label"></label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CanteenId" class="control-label"></label>
                            <select asp-for="CanteenId" class="form-control" asp-items="ViewBag.CanteenId"> @* Sử dụng ViewBag.CanteenId *@
                                <option value="">-- Chọn Nhà ăn --</option>
                            </select>
                            <span asp-validation-for="CanteenId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FoodCategoryCategoryId" class="control-label"></label>
                            <select asp-for="FoodCategoryCategoryId" class="form-control"
                                    asp-items="ViewBag.FoodCategoryCategoryId"> @* Sử dụng ViewBag.FoodCategoryCategoryId *@
                                <option value="">-- Chọn Danh mục --</option>
                            </select>
                            <span asp-validation-for="FoodCategoryCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="IsAvailable" />
                            <label class="form-check-label" asp-for="IsAvailable"></label>
                        </div>
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="IsSpecialOfTheDay" />
                            <label class="form-check-label" asp-for="IsSpecialOfTheDay"></label>
                        </div>
                        <div class="form-group mt-3 text-center"> @* Center buttons *@
                            <input type="submit" value="Lưu" class="btn btn-primary me-2" /> @* Save button *@
                            <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a> @* asp-action thay cho asp-page *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
