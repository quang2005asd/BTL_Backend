@model DNU.CanteenConnect.Web.Models.FoodCategory

@{
    ViewData["Title"] = "Sửa Danh mục";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;"> @* Center content *@
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 500px;"> @* Create card frame *@
        <div class="card-body">
            <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1> @* Page title *@

            <h4>Thông tin Danh mục</h4>
            <hr />
            <div class="row">
                <div class="col-md-12"> @* Use full width of card *@
                    <form asp-action="Edit"> @* Sử dụng asp-action thay vì method="post" *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" /> @* Hidden field to store Category ID *@
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea> @* Use textarea for longer descriptions *@
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3 text-center"> @* Center buttons *@
                            <input type="submit" value="Lưu" class="btn btn-primary me-2" /> @* Save button *@
                            <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
