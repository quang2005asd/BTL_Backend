@model DNU.CanteenConnect.Web.Models.FoodCategory

@{
    ViewData["Title"] = "Thêm Danh mục Mới";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;"> @* Căn giữa nội dung *@
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 500px;"> @* Tạo khung card *@
        <div class="card-body">
            <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1> @* Tiêu đề trang *@
            
            <h4>Thông tin Danh mục</h4>
            <hr />
            <form asp-action="Create"> @* Sử dụng asp-action thay vì method="post" *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea> @* Dùng textarea cho mô tả dài *@
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 text-center"> @* Căn giữa các nút *@
                    <input type="submit" value="Tạo Mới" class="btn btn-primary me-2" /> @* Nút Tạo Mới *@
                    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}