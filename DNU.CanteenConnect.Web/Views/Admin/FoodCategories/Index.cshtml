
@model DNU.CanteenConnect.Web.Pages.Admin.FoodCategories.IndexModel

@{
    ViewData["Title"] = "Quản lý Danh mục Món ăn";
}

<div class="container mt-5 pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i> Thêm Danh mục mới
        </a>
    </div>

    @if (Model.FoodCategory != null && Model.FoodCategory.Any())
    {
        <div class="card shadow-sm rounded-md">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead style="background-color: var(--primary-light);"> @* Dùng màu cam nhạt cho header bảng *@
                        <tr>
                            <th class="col-9 text-white"> @* Thêm text-white *@
                                @Html.DisplayNameFor(model => model.FoodCategory[0].Name)
                            </th>
                            <th class="col-3 text-center text-white"> @* Thêm text-white *@
                                Thao tác
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.FoodCategory)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="text-center">
                                    <a asp-page="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm me-2" data-bs-toggle="tooltip" title="Sửa danh mục">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Xóa danh mục">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm rounded-md" role="alert"> @* Thêm rounded-md *@
            <i class="fas fa-info-circle me-2"></i> Chưa có danh mục món ăn nào. Hãy thêm mới!
        </div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}