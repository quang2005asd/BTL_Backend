@page
@model DNU.CanteenConnect.Web.Pages.Admin.FoodCategories.CreateModel

@{
    ViewData["Title"] = "Thêm Danh mục Món ăn mới";
}

<div class="container mt-5 pt-5">
    <h1 class="section-title">@ViewData["Title"]</h1>

    <div class="card shadow-sm mx-auto rounded-md" style="max-width: 600px;">
        <div class="card-header text-white py-3" style="background-color: var(--primary-color);"> 
            <h5 class="mb-0"><i class="fas fa-folder-plus me-2"></i> Thông tin Danh mục mới</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="FoodCategory.Name" class="form-label"></label>
                    <input asp-for="FoodCategory.Name" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="FoodCategory.Name" class="text-danger mt-1 d-block"></span>
                </div>
                
                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-save me-2"></i> Tạo mới
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}