@page
@model DNU.CanteenConnect.Web.Pages.Admin.FoodCategories.DeleteModel

@{
    ViewData["Title"] = "Xóa Danh mục Món ăn";
}

<div class="container mt-5 pt-5">
    <h1 class="section-title">@ViewData["Title"]</h1>

    <div class="alert alert-danger text-center shadow-sm rounded-md mb-4" role="alert">
        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo!</h4>
        <p class="mb-0">Bạn có chắc chắn muốn xóa danh mục <strong>"@Model.FoodCategory.Name"</strong> này không? Thao tác này không thể hoàn tác.</p>
    </div>

    <div class="card shadow-sm mx-auto rounded-md" style="max-width: 600px;">
        <div class="card-header text-white py-3" style="background-color: #dc3545;"> @* Dùng màu đỏ trực tiếp cho header xóa *@
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Thông tin Danh mục cần xóa</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FoodCategory.Name)
                </dt>
                <dd class="col-sm-8">
                    <strong>@Html.DisplayFor(model => model.FoodCategory.Name)</strong>
                </dd>
            </dl>

            <form method="post" class="mt-4 d-flex justify-content-end">
                <input type="hidden" asp-for="FoodCategory.CategoryId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-2"></i> Xác nhận Xóa
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>