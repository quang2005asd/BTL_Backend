@model DNU.CanteenConnect.Web.Models.Cart

@{
    ViewData["Title"] = "Giỏ Hàng Của Tôi";
    decimal cartTotal = 0;
    if (Model?.CartItems != null)
    {
        cartTotal = Model.CartItems.Sum(ci => ci.Quantity * ci.PriceAtAddition);
    }
}

<style>
    .cart-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
    }

    .cart-header h1 {
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .cart-header i {
        font-size: 3rem;
    }

    .cart-container {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 30px;
        align-items: start;
    }

    @@media (max-width: 1024px) {
        .cart-container {
            grid-template-columns: 1fr;
        }
    }

    .cart-items-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .cart-items-header {
        padding: 24px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 1.3rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .cart-items-list {
        padding: 0;
    }

    .cart-item {
        display: flex;
        gap: 20px;
        padding: 20px 24px;
        border-bottom: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .cart-item:hover {
        background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    }

    .cart-item:last-child {
        border-bottom: none;
    }

    .cart-item-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .cart-item-details {
        flex: 1;
    }

    .cart-item-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 6px;
    }

    .cart-item-category {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 12px;
    }

    .cart-item-price {
        color: #43e97b;
        font-weight: 700;
        font-size: 1rem;
    }

    .cart-item-actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .quantity-control {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .quantity-btn {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        border: 2px solid #e2e8f0;
        background: white;
        color: #667eea;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .quantity-btn:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
    }

    .quantity-input {
        width: 50px;
        text-align: center;
        font-weight: 700;
        font-size: 1rem;
        color: #2d3748;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        padding: 8px;
    }

    .btn-remove {
        background: linear-gradient(135deg, #ff6e7f 0%, #fc6767 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(255, 110, 127, 0.2);
    }

    .btn-remove:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 110, 127, 0.3);
    }

    .cart-summary-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
        position: sticky;
        top: 100px;
    }

    .summary-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #e2e8f0;
        color: #718096;
    }

    .summary-row:last-of-type {
        border-bottom: none;
        padding-top: 16px;
        padding-bottom: 16px;
    }

    .summary-total {
        font-size: 1.3rem;
        font-weight: 900;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .btn-checkout {
        width: 100%;
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 14px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(67, 233, 123, 0.25);
        font-size: 1rem;
        margin-top: 20px;
    }

    .btn-checkout:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(67, 233, 123, 0.35);
    }

    .btn-continue-shopping {
        width: 100%;
        background: #f0f4ff;
        color: #667eea !important;
        border: 2px solid #667eea;
        font-weight: 700;
        padding: 12px;
        border-radius: 12px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        margin-top: 10px;
    }

    .btn-continue-shopping:hover {
        background: #667eea;
        color: white !important;
    }

    .empty-cart {
        background: white;
        border-radius: 16px;
        padding: 80px 40px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .empty-cart i {
        font-size: 3rem;
        color: #cbd5e0;
        margin-bottom: 20px;
    }

    .empty-cart h4 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 12px;
    }

    .empty-cart p {
        color: #718096;
        font-size: 1.05rem;
        margin-bottom: 30px;
    }

    .btn-browse-menu {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white !important;
        border: none;
        font-weight: 700;
        padding: 14px 40px;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.25);
        font-size: 1rem;
    }

    .btn-browse-menu:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.35);
    }

    .cart-empty-notice {
        color: #718096;
        font-style: italic;
        font-size: 0.95rem;
        padding: 16px;
        background: #f7fafc;
        border-left: 4px solid #667eea;
        border-radius: 8px;
    }
</style>

<div class="container-fluid py-5">
    <!-- Cart Header -->
    <div class="cart-header mb-5">
        <h1>
            <i class="fas fa-shopping-cart"></i>
            Giỏ Hàng Của Tôi
        </h1>
    </div>

    @if (Model != null && Model.CartItems != null && Model.CartItems.Any())
    {
        <div class="cart-container">
            <!-- Cart Items Section -->
            <div class="cart-items-card">
                <div class="cart-items-header">
                    <i class="fas fa-list"></i>
                    Danh Sách Món Ăn (@Model.CartItems.Count)
                </div>
                <div class="cart-items-list" id="cartItemsContainer">
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="cart-item" data-cart-item-id="@item.CartItemId">
                            <img src="@(item.FoodItem?.ImageUrl ?? "https://placehold.co/100x100/cccccc/ffffff?text=No+Img")" 
                                 alt="@item.FoodItem?.Name" class="cart-item-image" />
                            
                            <div class="cart-item-details">
                                <div class="cart-item-name">@item.FoodItem?.Name</div>
                                <div class="cart-item-category">@item.FoodItem?.FoodCategory?.Name</div>
                                <div class="cart-item-price">@item.PriceAtAddition.ToString("N0") VNĐ</div>
                            </div>

                            <div class="cart-item-actions">
                                <div class="quantity-control">
                                    <button class="quantity-btn btn-decrease" type="button" data-cart-item-id="@item.CartItemId">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="text" class="quantity-input cart-item-quantity" 
                                           value="@item.Quantity" data-cart-item-id="@item.CartItemId" readonly />
                                    <button class="quantity-btn btn-increase" type="button" data-cart-item-id="@item.CartItemId">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <button class="btn-remove btn-remove-item" data-cart-item-id="@item.CartItemId">
                                    <i class="fas fa-trash me-1"></i> Xóa
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Cart Summary Card -->
            <div class="cart-summary-card">
                <div class="summary-title">
                    <i class="fas fa-receipt"></i>
                    Tóm Tắt Giỏ Hàng
                </div>

                <div class="summary-row">
                    <span>Số lượng:</span>
                    <span id="itemCount">@Model.CartItems.Count</span>
                </div>

                <div class="summary-row">
                    <span>Tổng tiền:</span>
                    <span class="summary-total" id="cartTotalPrice">@cartTotal.ToString("N0") VNĐ</span>
                </div>

                <a asp-controller="Order" asp-action="Checkout" class="btn-checkout">
                    <i class="fas fa-credit-card me-2"></i>
                    Thanh Toán Ngay
                </a>

                <a asp-controller="Menu" asp-action="Index" class="btn-continue-shopping">
                    <i class="fas fa-arrow-left me-1"></i>
                    Tiếp Tục Mua Sắm
                </a>

                <div class="cart-empty-notice" style="margin-top: 20px;">
                    <i class="fas fa-info-circle me-1"></i>
                    Bạn có thể cập nhật số lượng hoặc xóa món ở đây
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <i class="fas fa-inbox"></i>
            <h4>Giỏ Hàng Của Bạn Đang Trống!</h4>
            <p>Hãy khám phá thực đơn của chúng tôi và thêm những món ăn yêu thích vào giỏ hàng nhé.</p>
            <a asp-controller="Menu" asp-action="Index" class="btn-browse-menu">
                <i class="fas fa-list me-2"></i> Đi Đến Thực Đơn
            </a>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            function updateCartTotal() {
                let total = 0;
                let count = 0;
                $('#cartItemsContainer .cart-item').each(function() {
                    const quantity = parseInt($(this).find('.cart-item-quantity').val());
                    const priceText = $(this).find('.cart-item-price').text();
                    const price = parseFloat(priceText.replace(/[^0-9,-]/g, '').replace('.', '').replace(',', '.'));

                    if (!isNaN(quantity) && !isNaN(price)) {
                        total += quantity * price;
                        count += quantity;
                    }
                });
                $('#cartTotalPrice').text(total.toLocaleString('vi-VN') + ' VNĐ');
                $('#itemCount').text(count);
            }

            function updateNavbarCartCount() {
                $.get('/Cart/GetCartItemCount', function(data) {
                    $('.cart-count').text(data.count);
                }).fail(function() {
                    console.error("Failed to fetch cart count.");
                });
            }

            $('#cartItemsContainer').on('click', '.btn-increase', function() {
                const cartItemId = $(this).data('cart-item-id');
                const quantityInput = $(this).siblings('.cart-item-quantity');
                let newQuantity = parseInt(quantityInput.val()) + 1;
                updateCartItemOnServer(cartItemId, newQuantity);
            });

            $('#cartItemsContainer').on('click', '.btn-decrease', function() {
                const cartItemId = $(this).data('cart-item-id');
                const quantityInput = $(this).siblings('.cart-item-quantity');
                let newQuantity = parseInt(quantityInput.val()) - 1;
                updateCartItemOnServer(cartItemId, newQuantity);
            });

            $('#cartItemsContainer').on('click', '.btn-remove-item', function() {
                const cartItemId = $(this).data('cart-item-id');
                removeCartItemOnServer(cartItemId);
            });

            function updateCartItemOnServer(cartItemId, newQuantity) {
                const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '/Cart/UpdateCartItemQuantity',
                    type: 'POST',
                    data: {
                        cartItemId: cartItemId,
                        newQuantity: newQuantity,
                        __RequestVerificationToken: antiForgeryToken
                    },
                    success: function(response) {
                        if (response.success) {
                            if (newQuantity <= 0) {
                                $(`div.cart-item[data-cart-item-id='${cartItemId}']`).fadeOut(300, function() { $(this).remove(); });
                                if ($('#cartItemsContainer .cart-item').length === 0) {
                                    location.reload();
                                }
                            } else {
                                const row = $(`input.cart-item-quantity[data-cart-item-id='${cartItemId}']`).closest('.cart-item');
                                row.find('.cart-item-quantity').val(newQuantity);
                            }
                            updateCartTotal();
                            updateNavbarCartCount();
                            if (typeof showToast === 'function') {
                                showToast(response.message, 'success');
                            }
                        } else {
                            if (typeof showToast === 'function') {
                                showToast(response.message, 'danger');
                            }
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Error updating cart:", error);
                        if (typeof showToast === 'function') {
                            showToast('Error updating cart. Please try again.', 'danger');
                        }
                    }
                });
            }

            function removeCartItemOnServer(cartItemId) {
                const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '/Cart/RemoveFromCart',
                    type: 'POST',
                    data: {
                        cartItemId: cartItemId,
                        __RequestVerificationToken: antiForgeryToken
                    },
                    success: function(response) {
                        if (response.success) {
                            $(`div.cart-item[data-cart-item-id='${cartItemId}']`).fadeOut(300, function() { $(this).remove(); });
                            if ($('#cartItemsContainer .cart-item').length === 0) {
                                location.reload();
                            }
                            updateCartTotal();
                            updateNavbarCartCount();
                            if (typeof showToast === 'function') {
                                showToast(response.message, 'success');
                            }
                        } else {
                            if (typeof showToast === 'function') {
                                showToast(response.message, 'danger');
                            }
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error("Error removing item:", error);
                        if (typeof showToast === 'function') {
                            showToast('Error removing item. Please try again.', 'danger');
                        }
                    }
                });
            }

            updateNavbarCartCount();
        });
    </script>
}
