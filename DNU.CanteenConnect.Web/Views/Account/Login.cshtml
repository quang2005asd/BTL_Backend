@model DNU.CanteenConnect.Web.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập tài khoản";
}

<div class="container mt-5 pt-5 pb-5">
    <h1 class="section-title">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-md">
                <div class="card-header text-white py-3" style="background-color: var(--primary-color);">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập tài khoản của bạn
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form id="account" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center border p-2 rounded">
                            <i class="fas fa-exclamation-circle me-2"></i> Vui lòng kiểm tra lại thông tin.
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"> @* Đã sửa Input.Email thành Email *@
                                <i class="fas fa-user me-2 text-muted"></i>Email hoặc Mã số SV/CB:
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email hoặc mã số của bạn" /> @* Đã sửa Input.Email thành Email *@
                            <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span> @* Đã sửa Input.Email thành Email *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"> @* Đã sửa Input.Password thành Password *@
                                <i class="fas fa-lock me-2 text-muted"></i>Mật khẩu:
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" /> @* Đã sửa Input.Password thành Password *@
                            <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span> @* Đã sửa Input.Password thành Password *@
                        </div>
                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" /> @* Đã sửa Input.RememberMe thành RememberMe *@
                            <label asp-for="RememberMe" class="form-check-label text-muted">Ghi nhớ đăng nhập</label> @* Đã sửa Input.RememberMe thành RememberMe *@
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            <i class="fas fa-arrow-alt-circle-right me-2"></i>Đăng nhập
                        </button>
                        <p class="mt-3 text-center text-muted">
                            Chưa có tài khoản?
                            <a asp-controller="Account" asp-action="Register" class="fw-bold text-decoration-none" style="color: var(--primary-color);">Đăng ký ngay</a> @* Đã sửa asp-page thành asp-controller/asp-action *@
                        </p>
                        <div class="text-center mt-4">
                            <a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none text-secondary">Quên mật khẩu?</a> @* Giữ nguyên nếu bạn có ForgotPassword trong AccountController, nếu không hãy điều chỉnh *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
