@model DNU.CanteenConnect.Web.Controllers.RegisterViewModel 
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container mt-5 pt-5 pb-5">
    <h1 class="section-title">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-md">
                <div class="card-header text-white py-3" style="background-color: var(--primary-color);">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản mới
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center border p-2 rounded">
                            <i class="fas fa-exclamation-circle me-2"></i> Vui lòng kiểm tra lại thông tin.
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email:</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">Mật khẩu:</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Xác nhận mật khẩu:</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold">Tên người dùng (Tùy chọn):</label>
                            <input asp-for="UserName" class="form-control" placeholder="Nhập tên người dùng" />
                            <span asp-validation-for="UserName" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại (Tùy chọn):</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="PhoneNumber" class="text-danger mt-1 d-block"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký
                        </button>
                        <p class="mt-3 text-center text-muted">
                            Đã có tài khoản?
                            <a asp-controller="Account" asp-action="Login" class="fw-bold text-decoration-none" style="color: var(--primary-color);">Đăng nhập ngay</a> @* Đã sửa asp-page thành asp-controller/asp-action *@
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
